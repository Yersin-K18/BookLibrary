
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login admin</title>
    <link href="~/Content/Css/Login.css" rel="stylesheet" />
    <!-- font roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
          rel="stylesheet" />
</head>
<body>
    
    <!-- from login -->
    <div class="login">

        <div class="login__container">
            <h1>Chào Mừng Admin </h1>
            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {
                <h5>Đăng Nhập</h5>
                @Html.TextBox("Username", null, new { placeholder = "User", type = "text" })
                <h5>Password</h5>
                @Html.TextBox("Password", null, new { placeholder = "Password", type = "password" })
                <button type="submit" class="">Đăng Nhập</button>
            }
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
                </script>
            }
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/Login.js"></script>
