
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BookLibrary</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Admin/images/favicon.ico" />
    <link rel="stylesheet" href="~/Content/Admin/css/backend-plugin.min.css">
    <link rel="stylesheet" href="~/Content/Admin/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="~/Content/Admin/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/remixicon/fonts/remixicon.css">

    <link rel="stylesheet" href="~/Content/Admin/vendor/tui-calendar/tui-calendar/dist/tui-calendar.css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/tui-calendar/tui-date-picker/dist/tui-date-picker.css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/tui-calendar/tui-time-picker/dist/tui-time-picker.css">
</head>
<body class=" ">
    <!-- loader Start -->
    <div id="loading">
        <div id="loading-center">
        </div>
    </div>
    <!-- loader END -->

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-6 bg-primary content-left">
                                        <div class="p-3">
                                            <h2 class="mb-2 text-white">Sign In</h2>
                                            <p>Wellcome Admin</p>                                            
                                                    @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                                                    {
                                                     <form>
                                                         <div class="row">
                                                             <div class="col-lg-12">
                                                                 <div class="floating-label form-group">
                                                                     @Html.TextBox("Username", null, new {placeholder = " ", type = "text", @class = "floating-input form-control" })
                                                                     <label>User</label>
                                                                 </div>
                                                             </div>

                                                             <div class="col-lg-12">
                                                                 <div class="floating-label form-group">
                                                                     @Html.TextBox("Password", null, new {placeholder = " ", type = "password", @class = "floating-input form-control" })
                                                                     <label>Password</label>
                                                                 </div>
                                                             </div>

                                                             
                                                             @if (ViewBag.Message != null)
                                                             {
                                                                 <script type="text/javascript">
                                                                        window.onload = function () {
                                                                            alert("@ViewBag.Message");
                                                                        };
                                                                 </script>
                                                             }
                                                         </div>
                                                         <button type="submit" class="btn btn-white">Sign In</button>
                                                     </form>
                                                    }
                                            
                                            
                                                    </div>
                                    </div>
                                    <div class="col-lg-6 content-right">

                                        <img src="~/Content/Admin/images/login/01.png" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Backend Bundle JavaScript -->
    <script src="~/Content/Admin/js/backend-bundle.min.js"></script>

    <!-- Table Treeview JavaScript -->
    <script src="~/Content/Admin/js/table-treeview.js"></script>

    <!-- Chart Custom JavaScript -->
    <script src="~/Content/Admin/js/customizer.js"></script>

    <!-- Chart Custom JavaScript -->
    <script async src="~/Content/Admin/js/chart-custom.js"></script>
    <!-- Chart Custom JavaScript -->
    <script async src="~/Content/Admin/js/slider.js"></script>

    <!-- app JavaScript -->
    <script src="~/Content/Admin/js/app.js"></script>

    <script src="~/Content/Admin/vendor/moment.min.js"></script>
</body>
</html>
